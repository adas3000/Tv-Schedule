<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp"
        >


        <TextView
            android:id="@+id/textView_live_movie_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="8dp"
            android:hint="@string/programme_item_default_title"
            android:layout_toStartOf="@id/imageView_live_programme_logo"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_live_movie_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/movie_item_default_category"
            android:layout_below="@id/textView_live_movie_name"
            />

        <TextView
            android:id="@+id/textView_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_live_movie_name"
            android:hint="@string/movie_item_default_time"
            android:layout_toStartOf="@id/textView_live_movie_category"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/imageView_live_programme_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
